{
  "manifest_version": 2,
  "version": "1.0",
  "name": "微博备份助手",
  "description": "助手",
  "permissions": [
    "activeTab", "contextMenus","storage","declarativeContent","notifications","tabs","https://m.weibo.cn/*"
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title":"点击进入备份",
    "scripts": ["lib/jquery-3.2.1.min.js"]
  },
  "background": {
    "persistent": false,
    "scripts": ["lib/jquery-3.2.1.min.js","lib/background.js"]
  }
}
